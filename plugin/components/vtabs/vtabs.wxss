@import '../../common/weui.wxss';

.weui-vtabs {
  width: 100%;
  height: 100%;
  display: flex
}

.weui-vtabs-bar__wrp {
  width: 110px;
  height: 100%;
  background: #eeeeee;
}

.weui-vtabs-bar__scrollview {
  height: 100%
}

.weui-vtabs-bar__content {
  width: 110px;
  height: 100%;
  border-bottom-left-radius: 15rpx;
}

.weui-vtabs-bar__item {
  display: inline-block;
  width: 110px;
  height: 55px;
  border-left: 4px solid transparent;
  transition: all .3s;
  border-radius: 15rpx 0 0 15rpx;
}

.weui-vtabs-bar__activeitem {
    background-color: var(--weui-BG-2) !important;
    color: #2ac986!important;
    border-left-color: #2ac986 !important;
	transition: all .3s;
}

.weui-vtabs-bar__title {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden
}

.weui-vtabs-content__wrp {
  overflow: hidden;
  flex: 1;
  height: 100%;
  position: relative
}

.weui-vtabs-content__scrollview {
  height: calc(100% - 50px)
}

.weui-vtabs-content {
  height: 100%
}

.default {
	transform: scale(1);
	transition: transform .3s;
}
  
.selected {
	transform: scale(1.2);
	transition: transform .3s;
}

.weui-btn-area {
	width: 100%;
	position: absolute;
	bottom: 0;
	right: 0;
	margin: 0;
	z-index: 999;
}

.confirm-btn {
	border-radius: 0;
}

.btn-success {
	color: #fff;
	border: 1px solid #2ac986;
	background-color: #2ac986;
}