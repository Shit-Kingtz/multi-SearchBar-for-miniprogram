@import '../../common/weui.wxss';


.weui-mask{position:fixed;z-index:99;top:0;right:0;left:0;bottom:0;background:rgba(0,0,0,0.6)}
.weui-mask.weui-mask_hidden{opacity:0;transform:scale3d(1, 1, 0)}
.weui-mask{opacity:1;transform:scale3d(1, 1, 1);transition:all .3s}

#swiper-tab {
 width: 100%;
 position: relative;
}
  
.swiper-tab {
 width: 100%;
 text-align: center;
 line-height: 80rpx;
 background-color: white;
 display: flex;
}
  
.swiper-tab-list {
 font-size: 30rpx;
 display: inline-block;
 width: 100%;
 color: #666;
 border-bottom: 0rpx;
 position: relative;
 z-index: 999;
}

.swiper-tab-list i {
 position: absolute;
 bottom: 30%;
 right: 14%;
 width: 0px;
 height: 0px;
 border: 5px solid #4e4e4e;
 border-top-color: #4e4e4e;
 border-bottom-color: transparent;
 border-left-color: transparent;
 border-right-color: transparent;
}
  
.on {
 color: #2ac986;
 border-bottom: 2rpx solid #2ac986;
 background-color: #fff;
}
  
.on i {
 border: 5px solid #2ac986;
 border-top-color: #2ac986;
 border-bottom-color: transparent;
 border-left-color: transparent;
 border-right-color: transparent;
}
  
.swiper-box {
 display: block;
 height: 100%;
 width: 100%;
 overflow: hidden;
}
  
.swiper-box view {
 text-align: center;
}
  
.swiper-item {
 background: #fff;
 width: 100%;
 height: 1000rpx;
 display: none;
 position: absolute;
 z-index: 333;
 left: 0;
 transform: translate(0,-100%);
 transition: transform .3s;
 border-radius: 0 0 15rpx 15rpx;
}


.swiper-item_toggle {
 transform: translate(0, 0)
}
  
/* 下拉切换中的切换 */
button:after {
	border: none;
}
  
/*// 筛选 */
  
.shaixuankuang {
 width: 100%;
 height: 100%;
 overflow: hidden;
 overflow-y: auto;
 overflow-x: hidden;
 border-radius: 0 0 15rpx 15rpx;
}
  
.vtabs-content-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    padding-bottom: 20px;
}

.weui-vtabs-bar__wrp {
    background-color: var(--weui-BG-0) !important;
}

.weui-vtabs-bar__item {
    background-color: var(--weui-BG-0);
    color: var(--weui-FG-0);
    border-left-color: var(--weui-FG-0);
}

.weui-vtabs-bar__activeitem {
    background-color: var(--weui-BG-2) !important;
    color: var(--weui-FG-0)!important;
    border-left-color: #07c160 !important;
}